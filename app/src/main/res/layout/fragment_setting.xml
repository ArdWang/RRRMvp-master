<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ac_linear_layout_bg"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/mUserName"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlck"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Admin"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/lone"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/right"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--下面的部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:background="@drawable/ac_linear_layout_bg"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@drawable/linear_layout_limian_bg"
                >
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlck"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="消息通知"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/right"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_single"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@drawable/linear_layout_limian_bg"
                >
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlck"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="空间清理"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/right"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:background="@drawable/linear_layout_limian_bg"
                >
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlck"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="发送反馈"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/right"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_weight="1.0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlck"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="帮助"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/right"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:id="@+id/mBtnOut"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:textColor="@color/colorWhite"
        android:text="注销登录"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="50dp"
        />


</RelativeLayout>